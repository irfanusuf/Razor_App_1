@page
@model TechyTweets.Pages.ReadQueriesModel
@{
}


<h2>All Submitted Queries</h2>

@if (Model.Contacts == null || !Model.Contacts.Any())
{
    <p>No queries have been submitted yet.</p>
}
else
{

    <div class="container">

   
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>Email</th>
                <th>Query</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var contact in Model.Contacts)
        {
            <tr>
                <td>@contact.Id</td>
                <td>@contact.UserName</td>
                <td>@contact.Email</td>
                <td>@contact.Query</td>
                <td> 
                    <a class="btn btn-primary me-2" href="/edit/id=1" > Edit </a> 
                    <a class="btn btn-danger" href="/delete/id=1"> Delete </a> 
                
                </td>
            </tr>
        }
        </tbody>
    </table>

     </div>
}
